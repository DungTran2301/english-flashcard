<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnglishFlashcard" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/accent_primary</item>
        <item name="android:background">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>


    // toolbar theme

    <style name="Theme.ToolbarTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/accent_primary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Toolbar.Dark" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/accent_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Toolbar.Light" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.ToolBarTextBig" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TextBig" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="roundedImage6">
        <item name="cornerSize">@dimen/dp_6</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Customize any other attributes as needed -->
    </style>

    <style name="Theme.TextMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>


    <style name="Theme.ButtonTextBig" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>


    <style name="Theme.ButtonTextSmall" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.EnglishFlashcard.Fullscreen" parent="Theme.EnglishFlashcard">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.EnglishFlashcard.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.EnglishFlashcard.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>