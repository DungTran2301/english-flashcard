<resources>

    <style name="Widget.Theme.EnglishFlashcard.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.EnglishFlashcard.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    // custom text input layout
    <style name="CustomTextInputLayout">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CustomTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Set the color of the time picker numbers -->
        <item name="android:numbersTextColor">@color/black</item>
        <!-- Set the color of the time picker header background -->
        <item name="colorAccent">@color/accent_primary</item>
        <!-- Set the color of the time picker header text -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>